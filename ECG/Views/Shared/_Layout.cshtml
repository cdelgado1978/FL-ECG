<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ECG</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/jquery.steps.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.steps.js"></script>
</head>
<body>
	<div class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menuCollapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("ECG", "NuevoECG", "Home", new { area = "" }, new { @class = "navbar-brand" })
			</div>
			<div id="menuCollapse" class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<!--<li>@Html.ActionLink("Home", "Index", "Home")</li>-->
					<li>@Html.ActionLink("Nuevo ECG", "NuevoECG", "Home")</li>
					<li>@Html.ActionLink("Pacientes", "Index", "pacientes")</li>
					
						<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Reportes <span class="caret"></span></a>
						<ul class="dropdown-menu">
							<li>@Html.ActionLink("Estudios / dia", "ReporteXDia", "Reportes")</li>
							@*<li>@Html.ActionLink("Reimprimir Informe", "ImprimirReporte", "Home")</li>*@
						</ul>
					</li>

					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Administrar <span class="caret"></span></a>
						<ul class="dropdown-menu">
							<li>@Html.ActionLink("ECG Ritmos", "Index", "ecgritmo")</li>
							<li>@Html.ActionLink("Morfologia QRS", "Index", "morfologiaqrs")</li>
							<li>@Html.ActionLink("Motivos de Visita", "Index", "motivos_visita")</li>
							<li>@Html.ActionLink("Pacientes", "Index", "pacientes")</li>
						</ul>
					</li>
					

				</ul>
				<!--@Html.Partial("_LoginPartial")-->
			</div>
		</div>
	</div>
    
<script src="~/Scripts/bootstrap-datepicker.min.js"></script>
<div class="container">
		@RenderBody()
		<hr />
		@*<footer>
				<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
			</footer>*@
	</div>




	@RenderSection("scripts", required: false)

	<script>
